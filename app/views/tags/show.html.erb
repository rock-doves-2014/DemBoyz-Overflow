<div class="row"><p></p></div>
<div class="row">
  <h2>Tag: <%= @tag.title %></h2>
  <br><br>
  <h3>Questions:</h3>
  <div class="large-8 columns">
    <% @questions.each do |q| %>
      <div class="row">
        <h5><strong><%= link_to q.title, question_path(q.id) %></strong></h5>
        <div class="large-2 columns small-3"><%= gravatar_tag q.user.email %></div>
        <div class="large-10 columns">
          <p><strong><%= q.user.name %> said: </strong><%= q.content %></p>
          <ul class="inline-list">
            <li><%= link_to "Answer Question", new_answer_path(question_id: q.id), method: :get %></li>
          </ul>
        </div>
      </div>
      <hr>
    <% end %>
  </div>
  <aside class="large-4 columns hide-for-small">
    <div class="panel">
      <h5>Other Tags:</h5>
      <% @tags.each do |t| %>
        <%= link_to "##{t.title}", tag_path(t.id) %>
      <% end %>
    </div>
  </aside>
</div>
